{
  "name": "pronghorn-monorepo",
  "version": "3.0.0",
  "description": "Pronghorn Vue/Node/Postgres Monorepo - A production-ready full-stack template",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,backend\" -c \"cyan,green\" \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix backend run start",
    "start:secure": "npm --prefix backend run start:secure",
    "lint": "npm --prefix frontend run lint && npm --prefix backend run lint",
    "format": "npm --prefix frontend run format && npm --prefix backend run format",
    "db:migrate": "npm --prefix backend run db:migrate",
    "db:seed": "npm --prefix backend run db:seed",
    "test": "npm --prefix frontend run test && npm --prefix backend run test",
    "clean": "rm -rf frontend/dist frontend/node_modules backend/node_modules node_modules",
    "install:all": "npm install && npm --prefix frontend install && npm --prefix backend install",
    "generate:secrets": "node scripts/generate-secrets.js"
  },
  "keywords": [
    "vue",
    "node",
    "express",
    "postgres",
    "pronghorn",
    "monorepo",
    "sso",
    "websocket",
    "llm",
    "openai",
    "anthropic",
    "google",
    "xai",
    "groq"
  ],
  "author": "Government of Alberta",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
